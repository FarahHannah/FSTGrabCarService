<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.farahhannah.fstgrabcarservice.MainActivity">


    <ImageView
        android:id="@id/btnUserRegister"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btnUserRegister1"
        android:layout_alignStart="@+id/btnUserRegister1"
        android:layout_alignTop="@+id/btnUserRegister1"
        android:src="@drawable/user" />

    <Button
        android:id="@+id/btnUserRegister1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btnDriverRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@null" />

    <ImageView
        android:id="@id/btnDriverRegister"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnDriverRegister1"
        android:layout_alignStart="@+id/btnDriverRegister1"
        android:layout_alignTop="@+id/btnDriverRegister1"
        android:src="@drawable/driver" />

    <Button
        android:id="@+id/btnDriverRegister1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnUserRegister1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnUserRegister1"
        android:layout_marginBottom="110dp"
        android:background="@null" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUserRegister"
        android:layout_centerHorizontal="true"
        android:text="I AM USER"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewUser"
        android:layout_alignStart="@+id/textViewUser"
        android:layout_below="@+id/btnDriverRegister"
        android:text="I AM DRIVER"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="16sp" />


</RelativeLayout>

